{
  "name": "Turtle-Browser",
  "version": "0.3.7",
  "description": "A memory efficient and minimalist browser.",
  "main": "src\\main.js",
  "scripts": {
    "test-win": "npm run uglify && node_modules\\electron\\dist\\electron.exe .",
    "test-unix": "./node_modules/.bin/electron .",
    "pack": "build --dir",
    "dist-win": "npm run uglify && build",
    "uglify": "uglifyjs src\\render\\index.js src\\render\\urlMatch.js src\\render\\control.js src\\render\\search.js src\\render\\tab.js -o src-min\\out.js"
  },
  "author": "Colin McNeil",
  "license": "ISC",
  "dependencies": {
    "electron-context-menu": "^0.9.0",
    "electron-is-dev": "^0.1.2",
    "electron-log": "^2.2.7",
    "electron-tabs": "^0.6.0",
    "electron-updater": "^2.8.7",
    "jquery": "^3.2.1",
    "tldjs": "^1.7.0",
    "uglify-es": "^3.3.9"
  },
  "devDependencies": {
    "electron": "^1.6.6"
  },
  "build": {
    "appId": "mcneil.browser",
    "publish": [
      {
        "provider": "github",
        "owner": "colinmcneil",
        "repo": "Turtle-Browser"
      }
    ],
    "mac": {
      "category": "mcneil.browser.app"
    },
    "files": [
      "!src${/*}."
    ],
    "nsis": {
      "perMachine": true
    },
    "fileAssociations": [
      {
        "ext": ".html",
        "name": "HTML"
      }
    ],
    "protocols": [
      {
        "name": "httpURL",
        "schemes": [
          "http",
          "https"
        ]
      }
    ]
  }
}
